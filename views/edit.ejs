<div class="container">
  <div class="row">
    <div class="col-lg-6 mx-auto mt-4">
      <div class="card shadow">
        <div class="card-header bg-dark">
          <h3 class="text-light">Edit : <%= officeBearers.name %></h3>
        </div>
        <div class="card-body p-4">
          <form
            action="/edit/<%= officeBearers._id %>?_method=PUT"
            method="POST"
          >
            <div class="mb-3">
              <label for="name">Name</label>
              <input
                type="text"
                name="name"
                class="form-control form-control-lg"
                id="name"
                value="<%= officeBearers.name %>"
                placeholder="Enter Name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="Designation">Designation</label>
              <input
                type="text"
                name="designations"
                class="form-control form-control-lg"
                id="designations"
                value="<%= officeBearers.designations %>"
                placeholder="Enter designation"
                required
              />
            </div>
            <div class="mb-3">
              <label for="massage">Massage</label>
              <textarea
                class="form-control form-control-lg"
                name="massage"
                id="massage"
                cols="30"
                rows="12"
                placeholder="Enter Massage"
              >
<%= officeBearers.massage %></textarea
              >
            </div>
            <div class="mb-3 d-grid">
              <label for="Image"> <%= officeBearers.image %> </label>
              <input
                type="file"
                name="image"
                class="form-control form-control-lg"
                id="image"
              />
            </div>
            <div class="form-group mb-4">
              <button type="submit" class="btn btn-primary bg-dark btn-lg">
                Update Office Bearer
              </button>
              <button
                type="button"
                class="btn btn-danger btn-lg"
                data-bs-toggle="modal"
                id="deleteButton"
                data-bs-target="#deleteModal"
              >
                Delete Office Bearer
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">
          You are about to remove a customer record.
        </div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p>
          This will remove the customer record of
          <b class="fw-bold"><%= officeBearers.name %> </b><br />
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <form
          action="/edit/<%= officeBearers._id %>?_method=DELETE"
          method="POST"
          class="position-relative"
        >
          <button type="submit" class="btn btn-primary">
            Yes, Remove Customer
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

